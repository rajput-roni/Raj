{
  "manifest_version": 3,
  "name": "Facebook Token & Cookie Extractor",
  "version": "1.0",
  "permissions": ["cookies", "scripting", "tabs", "storage"],
  "host_permissions": ["https://*.facebook.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
