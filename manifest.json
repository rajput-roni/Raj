{
  "manifest_version": 3,
  "name": "Pf Auto Typer",
  "version": "1.1",
  "description": "Send auto messages with key-based access",
  "permissions": ["tabs", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "host_permissions": [
    "https://pastebin.com/*"
  ]
}
